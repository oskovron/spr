{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["players"],
  "properties": {
    "players": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "screenName", "gender", "age"],
        "properties": {
          "id": { "type": "integer" },
          "screenName": { "type": "string" },
          "gender": { "type": "string" },
          "age": { "type": "integer" }
        }
      }
    }
  }
}